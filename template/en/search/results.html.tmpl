[%# INTERFACE:
  #
  #  packs - list with packages that matched the search criteria
  #  size - number of matches
  #  by_cat - search by category
  #
  #%]

[% IF by_cat %]
[% title = "Packages in category " _ query.text FILTER html %]
[% ELSIF by_sver %]
[% title = "Packages for " _ query.text FILTER html %]
[% ELSIF by_terms %]
[% title = "Package results for " _ query.text FILTER html %]
[% ELSE %]
[% title = "Georgi Sotirov's Slackware Packages" %]
[% END %]

[% PROCESS global/header.html.tmpl
   title = "SlackPack: " _ title
 %]

<div id="Content">

[% PROCESS global/leftbar.html.tmpl %]

<div id="Main">
[% IF by_cat %]
<h2>Packages in category <em>[% query.text FILTER html %]</em></h2>
[% ELSIF by_sver %]
<h2>Packages for <em>[% query.text FILTER html %]</em></h2>
[% ELSIF by_terms %]
<h2>Package results for <q>[% query.text FILTER html %]</q></h2>
[% ELSE %]
<h2>No search terms provided.</h2>
[% END %]

[% IF rcount > 0 %]
<p class="right">[% rcount FILTER html %] package(s) found</p>
<table class="list">
<thead>
<tr>
<th>Name</th>
<th>Version</th>
<th>Build</th>
<th>Architecture</th>
<th>Slackware version</th>
<th>Details</th>
</thead>
<tbody>
[% FOREACH pack = packs %]
 <tr>
 <td><a href="pack.cgi?id=[% pack.id FILTER html %]">[% pack.name FILTER html %]</a></td>
 <td>[% pack.version FILTER html %]</td>
 <td>[% pack.build FILTER html %]</td>
 <td>[% pack.arch FILTER html %]</td>
 <td>[% pack.slack FILTER html %]</td>
 <td><a href="pack.cgi?id=[% pack.id FILTER html %]">View</a></td>
</tr>
[% END %]
</tbody>
</table>
[% ELSE %]
[% IF by_cat %]
<p>No packages found in this category.</p>
[% ELSIF by_terms %]
<p>No packages found.</p>
[% ELSE %]
<p>Please, provide search terms or select a category.</p>
[% END %]
[% END %]
</div>
</div>

[% PROCESS global/footer.html.tmpl %]

