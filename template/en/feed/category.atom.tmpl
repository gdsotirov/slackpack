[%# INTERFACE:
  #
  #  items - latest packages in category
  #  category - information about the category
  #
  #%]

[% USE date(format = '%Y-%m-%dT%H:%M:%SZ', locale = 'en_US', gmt = 1) %]

<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet type="text/css" href="http://sotirov-bg.net/slackpack/style/atom.css"?>
<feed xml:lang="bg" xmlns="http://www.w3.org/2005/Atom">
  <id>http://sotirov-bg.net/slackpack/</id>
  <title>SlackPack - Latest in [% category.name FILTER xml %]</title>
  <link href="http://sotirov-bg.net/slackpack/search.cgi?cat=[% category.id %]" rel="alternate" type="text/html"/>
  <link href="http://sotirov-bg.net/slackpack/feed.cgi?q=cat&amp;cat=[% category.id %]&amp;f=atom" rel="self" type="application/atom+xml"/>
  <icon>http://sotirov-bg.net/slackpack/img/slackpack</icon>
  <updated>[% date.format(items.0.filedate) FILTER xml %]</updated>

  <author>
    <name>[% slackpack.author.name FILTER xml %]</name>
    <uri>[% slackpack.author.url FILTER xml %]</uri>
    <email>[% slackpack.author.email FILTER xml %]</email>
  </author>
  <rights>Copyright (c) 2005-2006 [% slackpack.author.name FILTER xml %]</rights>
  <generator uri="http://sotirov-bg.net/slackpack/" version="[% slackpack.version FILTER xml %]">SlackPack</generator>

  [% FOREACH item = items %]
  <entry>
    <id>http://sotirov-bg.net/slackpack/pack.cgi?id=[% item.id FILTER xml %]</id>
    <title>[% item.name FILTER xml %]-[% item.version FILTER xml %]-[% item.build FILTER xml %]</title>
    <link href="http://sotirov-bg.net/slackpack/pack.cgi?id=[% item.id FILTER xml %]" rel="alternate" type="text/html"/>
    <author>
      <name>[% item.afirstname FILTER xml %] [%+ item.aname FILTER xml %]</name>
      <email>[% item.aemail FILTER xml %]</email>
    </author>
    <content type="html">&lt;strong&gt;Architecture&lt;/strong&gt;: [% item.arch FILTER xml %]&lt;br /&gt;
    &lt;strong&gt;Format&lt;/strong&gt;: [% item.slack FILTER xml %]&lt;br /&gt;
    &lt;strong&gt;Description&lt;/strong&gt;: [% item.desc FILTER desc %]</content>
    <published>[% date.format(item.filedate) FILTER xml %]</published>
    <updated>[% date.format(item.filedate) FILTER xml %]</updated>
  </entry>
  [% END %]
</feed>

