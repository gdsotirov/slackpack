[%# INTERFACE:
  #
  #  items - latest packages for Slackware version
  #  slackver - information about the Slackware version
  #
  #%]

[% USE date(format = '%a, %d %b %Y %T GMT', locale = 'en_US', gmt = 1) %]

<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet type="text/xsl" href="http://sotirov-bg.net/slackpack/style/rss.xsl"?>
<?xml-stylesheet type="text/css" href="http://sotirov-bg.net/slackpack/style/rss.css"?>
<rss version="2.0" xmlns:blogChannel="http://backend.userland.com/blogChannelModule">
  <channel>
    <title>SlackPack - Latest for [% slackver.name %]</title>
    <link>http://sotirov-bg.net/slackpack/</link>
    <description>Latest packages in [% slackver.name FILTER xml %] format</description>
    <language>en</language>

    <copyright>Copyright (c) 2005-2006 [% slackpack.author.name FILTER xml %]</copyright>
    <pubDate>[% date.format(items.0.filedate) FILTER xml %]</pubDate>
    <lastBuildDate>[% date.format(lastbuild) FILTER xml %]</lastBuildDate>
    <managingEditor>[% slackpack.author.email FILTER xml %] ([% slackpack.author.name FILTER xml %])</managingEditor>
    <webMaster>[% slackpack.author.email FILTER xml %] ([% slackpack.author.name FILTER xml %])</webMaster>
    <generator>SlackPack [% slackpack.version FILTER xml %]</generator>

    <image>
      <title>SlackPack</title>
      <url>http://sotirov-bg.net/slackpack/img/slackpack</url>
      <link>http://sotirov-bg.net/slackpack/</link>
    </image>

    [% FOREACH item = items %]
    <item>
      <title>[% item.name FILTER xml %]-[% item.version FILTER xml %]-[% item.arch.id FILTER xml %]-[% item.build FILTER xml %]</title>
      <link>http://sotirov-bg.net/slackpack/pack.cgi?id=[% item.id FILTER xml %]</link>
      <description>[% FILTER xml %]
        <p><strong>Name</strong>: [% item.name %]<br />
          <strong>Version</strong>: [% item.version %]<br />
          <strong>Build</strong>: [% item.build %]</p>
        <p><strong>License</strong>: [% item.license.name %]</p>
        <p><strong>Architecture</strong>: [% item.arch.name %]<br />
          <strong>Format</strong>: [% item.slackver.name %]</p>
        <p><strong>Description</strong>:[% END %] [%+ item.description FILTER desc_xml %][% FILTER xml %]</p>
        <p><strong>Download</strong>:
          <a href="ftp://sotirov-bg.net[% item.fileurl %]">
            <abbr title="File Transfer Protocol">FTP</abbr></a>,
          <a href="http://ftp.sotirov-bg.net[% item.fileurl %]">
            <abbr title="Hyper Text Transfer Protocol">HTTP</abbr></a></p>
      [% END %]
      </description>
      <author>[% item.author.email FILTER xml %] ([% item.author.firstname FILTER xml %] [%+ item.author.name FILTER xml %])</author>
      <guid isPermaLink="true">http://sotirov-bg.net/slackpack/pack.cgi?id=[% item.id FILTER xml %]</guid>
      <pubDate>[% date.format(item.filedate) FILTER xml %]</pubDate>
    </item>
    [% END %]
  </channel>
</rss>

