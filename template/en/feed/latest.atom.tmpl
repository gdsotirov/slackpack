[% USE date(format = '%Y-%m-%dT%H:%M:%SZ', locale = 'en_US', gmt = 1) %]

<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet type="text/css" href="http://sotirov-bg.net/slackpack/style/atom.css"?>
<feed xml:lang="bg" xmlns="http://www.w3.org/2005/Atom">
  <id>http://sotirov-bg.net/slackpack/</id>
  <title>SlackPack - Latest packages</title>
  <link href="http://sotirov-bg.net/slackpack/" rel="alternate" type="text/html"/>
  <link href="http://sotirov-bg.net/slackpack/feed.cgi?q=latest&amp;type=atom" rel="self" type="application/atom+xml"/>
  <icon>http://sotirov-bg.net/slackpack/img/slackpack</icon>
  <updated>[% date.format(items.0.Date) FILTER xml %]</updated>

  <author>
    <name>[% slackpack.author.name FILTER xml %]</name>
    <uri>[% slackpack.author.url FILTER xml %]</uri>
    <email>[% slackpack.author.email FILTER xml %]</email>
  </author>
  <rights>Copyright (c) 2005-2006 [% slackpack.author.name FILTER xml %]</rights>
  <generator uri="http://sotirov-bg.net/slackpack/" version="[% slackpack.version FILTER xml %]">SlackPack</generator>

  [% FOREACH item = items %]
  <entry>
    <id>http://sotirov-bg.net/slackpack/pack.cgi?id=[% item.Id FILTER xml %]</id>
    <title>[% item.Name FILTER xml %]-[% item.Version FILTER xml %]-[% item.Arch FILTER xml %]-[% item.Build FILTER xml %]</title>
    <link href="http://sotirov-bg.net/slackpack/pack.cgi?id=[% item.Id FILTER xml %]" rel="alternate" type="text/html"/>
    <author>
      <name>[% item.AuthorFirstName FILTER xml %] [%+ item.AuthorName %]</name>
      <email>[% item.AuthorEmail FILTER xml %]</email>
    </author>
    <content type="html">[% FILTER xml %]
      <p><strong>Name</strong>: [% item.Name %]<br />
        <strong>Version</strong>: [% item.Version %]<br />
        <strong>Build</strong>: [% item.Build %]</p>
      <p><strong>License</strong>: [% item.License %]</p>
      <p><strong>Architecture</strong>: [% item.Architecture %]<br />
        <strong>Format</strong>: [% item.Slack %]</p>
      <p><strong>Description</strong>:[% END %] [%+ item.Description FILTER desc %][% FILTER xml %]</p>
      <p><strong>Download</strong>:
        <a href="ftp://sotirov-bg.net[% item.FileURL %]">
          <abbr title="File Transfer Protocol">FTP</abbr></a>,
        <a href="http://ftp.sotirov-bg.net[% item.FileURL %]">
          <abbr title="Hyper Text Transfer Protocol">HTTP</abbr></a></p>
    [% END %]
    </content>
    <published>[% date.format(item.Date) FILTER xml %]</published>
    <updated>[% date.format(item.Date) FILTER xml %]</updated>
  </entry>
  [% END %]
</feed>

