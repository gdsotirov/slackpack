[% USE date %]

<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet type="text/xsl" href="http://sotirov-bg.net/slackpack/style/rss.xsl"?>
<?xml-stylesheet type="text/css" href="http://sotirov-bg.net/slackpack/style/rss.css"?>
<rss version="2.0" xmlns:blogChannel="http://backend.userland.com/blogChannelModule">
  <channel>
    <title>SlackPack - Latest in [% category.name %]</title>
    <link>http://sotirov-bg.net/slackpack/</link>
    <description>Latest packages in category [% category.name %]</description>
    <language>en</language>

    <copyright>Copyright (c) 2004-2006 Georgi D. Sotirov</copyright>
    <pubDate>[% date.format(format=>"%a, %e %b %Y %T GMT", time=>items.0.filedate, gmt=>1, locale=>'en_US') FILTER xml %]</pubDate>
    <lastBuildDate>[% lastbuild %]</lastBuildDate>
    <managingEditor>gsotirov@sotirov-bg.net (Georgi D. Sotirov)</managingEditor>
    <webMaster>gsotirov@sotirov-bg.net (Georgi D. Sotirov)</webMaster>
    <generator>SlackPack [% slackpack.version %]</generator>

    <image>
      <title>SlackPack</title>
      <url>http://sotirov-bg.net/slackpack/img/slackpack</url>
      <link>http://sotirov-bg.net/slackpack/</link>
    </image>

    [% FOREACH item = items %]
    <item>
      <title>[% item.name FILTER xml %]-[% item.version FILTER xml %]-[% item.build FILTER xml %]</title>
      <link>http://sotirov-bg.net/slackpack/pack.cgi?id=[% item.id FILTER xml %]</link>
      <description>
        Architecture: [% item.arch FILTER xml %]
        Slackware: [% item.slack FILTER xml %]
        Description: [% item.desc FILTER xml %]
      </description>
      <author>[% item.aemail FILTER xml %] ([% item.afirstname FILTER xml %] [%+ item.aname FILTER xml %])</author>
      <guid isPermaLink="true">http://sotirov-bg.net/slackpack/pack.cgi?id=[% item.id FILTER xml %]</guid>
      <pubDate>[% date.format(format=>"%a, %e %b %Y %T GMT", time=>item.filedate, gmt=>1, locale=>'en_US') FILTER xml %]</pubDate>
    </item>
    [% END %]
  </channel>
</rss>

