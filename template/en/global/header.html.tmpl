[% USE Number.Format(THOUSANDS_SEP = ' ',
                     DECIMAL_POINT = '.',
                     DECIMAL_DIGITS = 2,
                     KILO_SUFFIX = ' <abbr title="Kilo Bytes">KB</abbr>',
                     MEGA_SUFFIX = ' <abbr title="Mega Bytes">MB</abbr>',
