[% USE date(format = '%Y-%m-%d/%H:%M:%S', locale = 'en_US', gmt = 0) %]


[% PROCESS global/leftbar.feeds.tmpl %]
[% PROCESS global/header.html.tmpl
   title = "SlackPack: Downloading package " _ pack.title _ " " _ pack.version
   feeds = lb_feeds
 %]

<div id="Content">

[% PROCESS global/leftbar.html.tmpl %]

<div id="Main">
<h2>Downloading package <em>[% pack.title FILTER html %] [%+ pack.version %]</em></h2>
<div id="MirrorInfo">
<p>You have requested to download file <em>[% pack.filename FILTER html %]</em>.
You can download this file directly from this site or you can choose
a mirror close to you.</p></div>

<h3>Please, select a mirror</h3>

<div id="Mirrors">
<table cellspacing="0">
<thead>
<tr>
<th>Logo</th>
<th>Host</th>
<th>Location</th>
<th>Continent</th>
<th>Download</th>
</tr>
</thead>
<tbody>
[% FOR mirror = mirrors %]
<tr class="[% loop.count() % 2 == 1 ? 'odd' : 'even' %]">
<td><a href="[% mirror.home_url %]"><img alt="[% mirror.name %]" height="31"
src="data:image/png;base64,[% mirror.logo %]" title="[% mirror.name %]" width="88" /></a></td>
<td>[% mirror.name %]</td>
<td>[% mirror.loc_city %], [% mirror.loc_country %]</td>
<td>[% mirror.loc_continent %]</td>
<td>[% SWITCH mirror.protocol %]
    [% CASE 'ftp'  %]<a href="[% mirror.rel_url %][% pack.fileurl %]">FTP</a>
    [% CASE 'http' %]<a href="[% mirror.rel_url %][% pack.fileurl %]">HTTP</a>
    [% END %]</td>
</tr>
[% END %]
</tbody>
</table>
</div>
</div>
</div>

[% PROCESS global/footer.html.tmpl %]

