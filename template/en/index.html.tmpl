[%# INTERFACE:
  #
  #  packs - hash with the type of liceneses data
  #  categories - package categories
  #  news - site news
  #  count - total count of the packages
  #  size - total size of the packages in human readable format
  #  sizeB - total size of the packages in bytes
  #
  #%]

[% PROCESS global/header.html.tmpl
   title = "Georgi Sotirov's Slackware Packages",
   count = count,
   size = size,
   sizeB = sizeB
 %]

<div id="Content">
<div id="LeftBar">

<div id="Search">
<h2>Search</h2>
<form action="search.cgi">
<p class="center"><input id="q" maxlength="255" name="q" type="text" size="15" />
<br /><br />
<input id="submit" name="submit" type="submit" value="Search" /></p>
</form>
</div>

<div id="Categories">
<h2>Categories</h2>
<ul>
[% FOREACH cat = categories %]
<li><a href="search.cgi?cat=[% cat.id %]">[% cat.name FILTER html %] ([% cat.count FILTER html %])</a></li>
[% END %]
</ul>
</div>

<div id="About">
<h2>About</h2>
<map name="AboutMap"><ul>
<li><a href="about.cgi">For the site</a></li>
<li><a href="http://sotirov-bg.net/~gsotirov/">Author's site</a></li>
</ul></map>
</div>
</div>

<div id="Main">
<div id="News">
<h2>News</h2>
<ul>
[% FOREACH n = news %]
<li>[% n.datetime FILTER html %] - [% n.title FILTER html %]</li>
[% END %]
</ul>
</div>

<div id="Latest">
<h2>Latest 25 packages</h2>
<table class="list">
<thead>
<tr>
<th>Date/Time</th>
<th>Name</th>
<th>Version</th>
<th>Build</th>
<th>Architecture</th>
<th>Slackware version</th>
<th>Details</th>
</tr>
</thead>
<tbody>
[% FOREACH pack = packs %]
 <tr>
 <td>[% pack.Date FILTER html %][% IF pack.Time %]&nbsp;[% pack.Time FILTER html %][% END %]</td>
 <td><a href="pack.cgi?id=[% pack.Id %]">[% pack.Name FILTER html %]</a></td>
 <td>[% pack.Version FILTER html %]</td>
 <td>[% pack.Build FILTER html %]</td>
 <td>[% pack.Architecture FILTER html %]</td>
 <td>[% pack.Slack FILTER html %]</td>
 <td><a href="pack.cgi?id=[% pack.Id %]">View</a></td>
</tr>
[% END %]
</tbody>
</table>
</div>
</div>
</div>

[% PROCESS global/footer.html.tmpl %]

