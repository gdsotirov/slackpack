[%# INTERFACE:
  #
  #  pack - package data
  #  history - package history
  #
  #%]

[% PROCESS global/header.html.tmpl
   title = "Georgi Sotirov's Slackware Packages",
   count = count,
   size = size,
   sizeB = sizeB
 %]

<div id="Content">
<div id="LeftBar">

<div id="Search">
<h2>Search</h2>
<form action="search.cgi">
<p class="center"><input id="q" maxlength="255" name="q" type="text" size="15" />
<br /><br />
<input id="submit" name="submit" type="submit" value="Search" /></p>
</form>
</div>

<div id="Categories">
<h2>Categories</h2>
<ul>
[% FOREACH cat = categories %]
<li><a href="search.cgi?cat=[% cat.id %]">[% cat.name FILTER html %] ([% cat.count FILTER html %])</a></li>
[% END %]
</ul>
</div>

<div id="About">
<h2>About</h2>
<map name="AboutMap"><ul>
<li><a href="about.html">For the site</a></li>
<li><a href="http://sotirov-bg.net/~gsotirov/">Author's site</a></li>
</ul></map>
</div>
</div>

<div id="Main">
<h2>Package details for <em>[% pack.name FILTER html %]</em></h2>
<div id="Package">
<p><strong>Version</strong>: [% pack.version FILTER html %]<br />
<strong>Build</strong>: [% pack.build FILTER html %]</p>
<p><strong>Homepage</strong>: <a href="[% pack.url %]">[% pack.url FILTER html %]</a></p>
<p class="text desc">[% pack.desc %]</p>
<p>
<strong>License</strong>: [% IF pack.license_url %]<a href="[% pack.license_url FILTER html %]">[% END %][% pack.license FILTER html %][% IF pack.license_url %]</a>[% END %]<br />
<strong>Architecture</strong>: [% pack.arch FILTER html %]<br />
<strong>Format</strong>: [% pack.slack FILTER html %]<br />
<strong>Category</strong>: [% pack.category FILTER html %]<br />
<strong>SlackBuild</strong>: [% IF pack.slackbuild == 'yes' %]Yes, included[% ELSE %]No[% END %]</p>
</div>

<div id="RightBar">
<div id="File">
<h2>File info</h2>
<p><strong>Filename</strong>: [% pack.filename FILTER html %]<br />
<strong>Filesize</strong>: [% pack.filesize_hr %] ([% pack.filesize FILTER html %] <abbr title="Bytes">B</abbr>)<br />
<strong>MD5 Hash</strong>: [% pack.filemd5 FILTER html %]<br />
<strong>Date/Time</strong>: [% pack.date FILTER html %] / [% pack.time FILTER html %]</p>
</div>

<div id="Download">
<h2>Download</h2>
<p><strong><abbr title="Hyper Text Transfer Protocol">HTTP</abbr></strong>: <a href="http://ftp.sotirov-bg.net[% pack.fileurl %]">Download</a><br />
<strong><abbr title="File Transfer Protocol">FTP</abbr></strong>: <a href="ftp://sotirov-bg.net[% pack.fileurl %]">Download</a>
</p>
</div>
</div>

<div id="History">
<h3>Other Formats/Versions</h3>
[% IF history.0 %]
<table class="list">
<thead>
<tr>
<th>Format</th>
<th>Version</th>
<th>Build</th>
<th>Architecture</th>
<th>Date/Time</th>
<th>Size, <abbr title="Bytes">B</abbr></th>
<th>Details</th>
</tr>
</thead>
<tbody>
[% FOREACH hist = history %]
<tr>
<td>[% hist.slack FILTER html %]</td>
<td>[% hist.version FILTER html %]</td>
<td>[% hist.build FILTER html %]</td>
<td>[% hist.arch FILTER html %]</td>
<td>[% hist.date FILTER html %]&nbsp;[% hist.time FILTER html %]</td>
<td>[% hist.filesize FILTER html %]</td>
<td><a href="pack.cgi?id=[% hist.id %]">View</a></td>
</tr>
[% END %]
</tbody>
</table>
[% ELSE %]
<p>No other formats/versions of this package exist.</p>
[% END %]
</div>
</div>

</div>

[% PROCESS global/footer.html.tmpl %]
 
