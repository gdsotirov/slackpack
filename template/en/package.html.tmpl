[%# INTERFACE:
  #
  #  pack - package data
  #  history - package history
  #
  #%]

[% PROCESS global/header.html.tmpl
   title = "Georgi Sotirov's Slackware Packages",
   count = count,
   size = size,
   sizeB = sizeB
 %]

<div id="Content">
<h2>Package details for <em>[% pack.name %]</em></h2>
<div id="Package">
<p><strong>Version</strong>: [% pack.version %]<br />
<strong>Build</strong>: [% pack.build %]</p>
<p><strong>Homepage</strong>: <a href="[% pack.url %]">[% pack.url %]</a></p>
<p class="text">[% pack.desc %]</p>
<p>
<strong>License</strong>: [% IF pack.license_url %]<a href="[% pack.license_url %]">[% END %][% pack.license %][% IF pack.license_url %]</a>[% END %]<br />
<strong>Architecture</strong>: [% pack.arch %]<br />
<strong>Format</strong>: [% pack.slack %]<br />
<strong>Category</strong>: [% pack.category %]<br />
<strong>SlackBuild</strong>: [% IF pack.slackbuild == 'yes' %]Yes, included[% ELSE %]No[% END %]</p>
</div>

<div id="RightBar">
<div id="File">
<h2>File info</h2>
<p><strong>Filename</strong>: [% pack.filename %]<br />
<strong>Filesize</strong>: [% pack.filesize %] <abbr title="Bytes">B</abbr><br />
<strong>MD5 Hash</strong>: [% pack.filemd5 %]<br />
<strong>Date/Time</strong>: [% pack.date %] / [% pack.time %]</p>
</div>

<div id="Download">
<h2>Download</h2>
<p><strong><abbr title="Hyper Text Transfer Protocol">HTTP</abbr></strong>: <a href="http://ftp.sotirov-bg.net[% pack.fileurl %]">Download</a><br />
<strong><abbr title="File Transfer Protocol">FTP</abbr></strong>: <a href="ftp://sotirov-bg.net[% pack.fileurl %]">Download</a>
</p>
</div>
</div>

<div id="History">
<h3>Other Formats/Versions</h3>
[% IF history %]
<table class="list">
<thead>
<tr>
<th>Format</th>
<th>Version</th>
<th>Build</th>
<th>Architecture</th>
<th>Details</th>
</tr>
</thead>
<tbody>
[% FOREACH hist = history %]
<tr>
<td>[% hist.slack %]</td>
<td>[% hist.version %]</td>
<td>[% hist.build %]</td>
<td>[% hist.arch %]</td>
<td><a href="pack.cgi?id=[% hist.id %]">View</a></td>
</tr>
[% END %]
</tbody>
</table>
[% ELSE %]
<p>No other formats/versions of this package exist.</p>
[% END %]
</div>
</div>

[% PROCESS global/footer.html.tmpl %]
