[% USE date(format = '%Y-%m-%d', locale = 'en_US', gmt = 0) %]

[% feedl = [] %]
[% feedl.push({title => "Последни новини (Atom)",
               type => "application/atom+xml",
               url => "feed.cgi?q=news&amp;type=atom"
              }) %]
[% feedl.push({title => "Последни новини (RSS)",
               type => "application/rss+xml",
               url => "feed.cgi?q=news&amp;type=rss"
              }) %]
[% feedl.push({title => "Последни новини (RDF)",
               type => "application/rdf+xml",
               url => "feed.cgi?q=news&amp;type=rdf"
              }) %]
[% feedl.push({title => "Последни пакети (Atom)",
               type => "application/atom+xml",
               url => "feed.cgi?q=latest&amp;type=atom"
              }) %]
[% feedl.push({title => "Последни пакети (RSS)",
               type => "application/rss+xml",
               url => "feed.cgi?q=latest&amp;type=rss"
              }) %]
[% feedl.push({title => "Последни пакети (RDF)",
               type => "application/rdf+xml",
               url => "feed.cgi?q=latest&amp;type=rdf"
              }) %]
[% PROCESS global/leftbar.feeds.tmpl %]
[% FOREACH feed = lb_feeds %]
[%   feedl.push(feed) %]
[% END %]

[% PROCESS global/header.html.tmpl
   title = "Slackware пакети",
   feeds = feedl
 %]

<div id="Content">

[% PROCESS global/leftbar.html.tmpl %]

<div id="Main">
<div id="News">
<h2>Последни новини</h2>
[% FOREACH n = news %]
<div id="n[% n.id FILTER html %]">
<p><a href="news.cgi?id=[% n.id FILTER html %]">[% n.title FILTER html %]</a>
<em>на [% date.format(format=>'%Y-%m-%d в %H:%M:%S', time=>n.published, gmt=>0) FILTER html %] от</em>
<a href="mailto:[% n.author.email FILTER email %]">[% n.author.firstname FILTER html %] [%+ n.author.name FILTER html %]</a>
</p></div>
[% END %]
<p class="right">
<a href="feed.cgi?q=news&amp;type=atom" title="Последни новини (Atom)" type="application/atom+xml">Atom</a>&nbsp;<img alt="Емисия" longdesc="img/feed-icon" src="img/feed-icon" />
<a href="feed.cgi?q=news&amp;type=rss" title="Последни новини (RSS)" type="application/rss+xml"><abbr title="Really Simple Syndication">RSS</abbr></a>&nbsp;<img alt="Емисия" longdesc="img/feed-icon" src="img/feed-icon" />
<a href="feed.cgi?q=news&amp;type=rdf" title="Последни новини (RDF)" type="application/rdf+xml"><abbr title="Resource Definition Framework">RDF</abbr></a>&nbsp;<img alt="Емисия" longdesc="img/feed-icon" src="img/feed-icon" /></p>
</div>

<div id="Latest">
<h2>Последни пакети</h2>
<table class="list">
<thead>
<tr>
<th>Дата</th>
<th>Име</th>
<th>Версия</th>
<th>Построение</th>
<th>Архитектура</th>
<th>Формат</th>
<th>Подробности</th>
</tr>
</thead>
<tbody>
[% FOREACH pack = packs %]
<tr>
 <td>[% date.format(pack.filedate) FILTER html %]</td>
 <td><a href="[% pack.url %]">[% pack.title FILTER html %]</a>
     <img alt="ext^" src="img/extsite" title="Външна връзка" /></td>
 <td>[% pack.version FILTER html %]</td>
 <td>[% pack.build FILTER html %]</td>
 <td>[% pack.arch.name FILTER html %]</td>
 <td>[% pack.slackver.name FILTER html %]</td>
 <td><a href="pack.cgi?id=[% pack.id FILTER html %]">Преглед</a></td>
</tr>
[% END %]
</tbody>
</table>
<p class="right">
<a href="feed.cgi?q=latest&amp;type=atom" title="Последни пакети (Atom)" type="application/atom+xml">Atom</a>&nbsp;<img alt="Емисия" longdesc="img/feed-icon" src="img/feed-icon" />
<a href="feed.cgi?q=latest&amp;type=rss" title="Последни пакети (RSS)" type="application/rss+xml"><abbr title="Really Simple Syndication">RSS</abbr></a>&nbsp;<img alt="Емисия" longdesc="img/feed-icon" src="img/feed-icon" />
<a href="feed.cgi?q=latest&amp;type=rdf" title="Последни пакети (RDF)" type="application/rdf+xml"><abbr title="Resource Definition Framework">RDF</abbr></a>&nbsp;<img alt="Емисия" longdesc="img/feed-icon" src="img/feed-icon" /></p>
</div>
</div>
</div>

[% PROCESS global/footer.html.tmpl %]

